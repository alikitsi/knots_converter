speed = float(input('enter speed: '))
unit = input('is this in (k)m/h or (m)ph? ')
if unit.lower() == "k" :
    converted = speed * 0.539957
    print(f"speed is {converted} knots")

elif unit.lower() == "m" :
    converted = speed * 0.868976
    print(f"speed is {converted} knots")

else :
    print('unit not recognised')
